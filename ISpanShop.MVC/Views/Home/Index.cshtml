<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

<div class="container mt-4" style="border: 2px dashed #007bff; padding: 20px; border-radius: 10px;">
    <h3 class="text-primary">⚡ SignalR 即時通訊測試區</h3>

    <div class="row">
        <div class="col-md-4">
            <input type="number" id="receiverId" placeholder="要傳給誰? (輸入接收者 User ID)" class="form-control mb-2" value="2" />
        </div>
        <div class="col-md-6">
            <input type="text" id="messageInput" placeholder="輸入測試訊息 (例如: 有沒有免運?)" class="form-control mb-2" />
        </div>
        <div class="col-md-2">
            <button id="sendButton" class="btn btn-primary w-100">發送</button>
        </div>
    </div>
    <hr />
    <ul id="messagesList" class="list-group">
    </ul>
</div>

<script>
    // 1. 建立連線 (⚠️ 記得把下面的 URL 換成你剛剛在步驟 1 找到的 WebAPI 網址！)
    const connection = new signalR.HubConnectionBuilder()
    .withUrl("https://localhost:7028/chatHub") // 改成這行
    .withAutomaticReconnect()
    .build();

    // 2. 接收後端推播的訊息 (對應 ChatHub 裡的 "ReceiveMessage")
    connection.on("ReceiveMessage", function (senderId, content, type, time) {
        const li = document.createElement("li");
        li.className = "list-group-item list-group-item-info";
        li.textContent = `[${time}] 用戶 ${senderId} 說: ${content}`;
        document.getElementById("messagesList").prepend(li); // 把新訊息塞到最上面
    });

    // 如果發生錯誤的推播 (對應 ChatHub 裡的 "ErrorMessage")
    connection.on("ErrorMessage", function (errorMsg) {
        alert("系統提示：" + errorMsg);
    });

    // 3. 啟動連線
    connection.start().then(function () {
        console.log("🟢 SignalR 連線成功！");
        // 可以在畫面上加個小提示
        const li = document.createElement("li");
        li.className = "list-group-item list-group-item-success";
        li.textContent = "已成功連線到通訊伺服器！";
        document.getElementById("messagesList").appendChild(li);
    }).catch(function (err) {
        return console.error("🔴 連線失敗: ", err.toString());
    });

    // 4. 綁定發送按鈕事件
    document.getElementById("sendButton").addEventListener("click", function (event) {
        const receiverId = parseInt(document.getElementById("receiverId").value);
        const message = document.getElementById("messageInput").value;
        const type = 1; // 1 代表文字

        // 呼叫後端 WebAPI 的 SendPrivateMessage 方法
        connection.invoke("SendPrivateMessage", receiverId, message, type)
            .catch(function (err) {
                return console.error("發送失敗: ", err.toString());
            });

        // 清空輸入框
        document.getElementById("messageInput").value = '';
        event.preventDefault();
    });
</script>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
