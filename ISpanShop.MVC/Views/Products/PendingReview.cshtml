@model IEnumerable<ISpanShop.MVC.Models.ViewModels.ProductReviewListVm>

@{
    ViewData["Title"] = "商品審核中心";
}

<div class="container mt-5">
    <h2>商品審核中心</h2>
    <hr />

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>商品 ID</th>
                    <th>商店 ID</th>
                    <th>分類</th>
                    <th>品牌</th>
                    <th>商品名稱</th>
                    <th>建立時間</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.StoreId</td>
                        <td>@product.CategoryName</td>
                        <td>@product.BrandName</td>
                        <td>@product.Name</td>
                        <td>@(product.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "-")</td>
                        <td>
                            <form method="post" action="@Url.Action("ChangeStatus", "Products")" style="display: inline;">
                                <input type="hidden" name="id" value="@product.Id" />
                                <input type="hidden" name="newStatus" value="1" />
                                <button type="submit" class="btn btn-success btn-sm">核准上架</button>
                            </form>
                            <form method="post" action="@Url.Action("ChangeStatus", "Products")" style="display: inline;">
                                <input type="hidden" name="id" value="@product.Id" />
                                <input type="hidden" name="newStatus" value="0" />
                                <button type="submit" class="btn btn-danger btn-sm">退回下架</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h5>目前沒有需要審核的商品。</h5>
        </div>
    }
</div>
