@model ISpanShop.MVC.Models.Orders.OrderIndexVm
@using ISpanShop.Common.Enums

@{
    ViewData["Title"] = "訂單管理";
}

<h2>訂單列表</h2>

<section class="mb-4">
    <form asp-action="Index" method="get" class="row g-3">
        <div class="col-md-3">
            <label class="form-label">訂單編號</label>
            <input type="text" name="OrderNumber" value="@Model.Criteria.OrderNumber" class="form-control" placeholder="輸入編號..." />
        </div>
        <div class="col-md-3">
            <label class="form-label">狀態</label>
            <select name="Status" class="form-select">
                <option value="">全部狀態</option>
                @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
                {
                    <option value="@((byte)status)" selected="@(Model.Criteria.Status == (OrderStatus)status)">@status</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label">開始日期</label>
            <input type="date" name="StartDate" value='@Model.Criteria.StartDate?.ToString("yyyy-MM-dd")' class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">結束日期</label>
            <input type="date" name="EndDate" value='@Model.Criteria.EndDate?.ToString("yyyy-MM-dd")' class="form-control" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">搜尋</button>
        </div>
    </form>
</section>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>訂單編號</th>
            <th>用戶</th>
            <th>商店</th>
            <th>總金額</th>
            <th>狀態</th>
            <th>下單時間</th>
            <th>收件人</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders.Items)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.UserName</td>
                <td>@order.StoreName</td>
                <td>@order.FinalAmount.ToString("C0")</td>
                <td>
                    <span class="badge bg-secondary">@order.Status</span>
                </td>
                <td>@order.CreatedAt?.ToString("yyyy/MM/dd HH:mm")</td>
                <td>@order.RecipientName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">查看明細</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- 簡單分頁控制項 -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.Orders.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Orders.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { 
                    PageNumber = i, 
                    OrderNumber = Model.Criteria.OrderNumber,
                    Status = Model.Criteria.Status,
                    StartDate = Model.Criteria.StartDate,
                    EndDate = Model.Criteria.EndDate
                })">@i</a>
            </li>
        }
    </ul>
</nav>